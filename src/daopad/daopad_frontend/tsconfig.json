{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Type Checking - Relaxed for incremental adoption */
    /* Note: Strict mode disabled for gradual migration from JS codebase */
    /* Enable these incrementally as codebase is converted to TypeScript */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false,

    /* Keep these - safe regardless of JS/TS */
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,

    /* Disable these for JS compatibility */
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,

    /* Emit */
    "noEmit": true,
    "isolatedModules": true,

    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,

    /* Skip Library Check */
    "skipLibCheck": true,

    /* Advanced */
    "preserveSymlinks": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["src/pages/*"],
      "@declarations/*": ["src/declarations/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "*.config.js",
    "*.config.ts"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
